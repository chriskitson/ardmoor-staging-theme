{% stylesheet %}
  .return-icons {
    display: flex;
    width: 100%;
    margin-top: 35px;
    flex-wrap: wrap;
  }
  .return-icons li {
    list-style: none;
    width: 25%;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 10px;
  }
  @media only screen and (max-width: 900px) {
    .return-icons li {
      width: 50% !important;
    }
  }
  .return-icons li a {
    font-size: 1.1em;
    font-weight: bold;
    background: #EFEFEF;
    padding: 30px 0;
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    text-align: center;
    line-height: auto;
  }
  .return-icons li a:hover {
    color: #7db490;
  }
  .return-icons li a img {
    width: 50px;
    height: 50px;
  }
  .return-icons li a span {
    margin-top: 10px;
    line-height: normal;
  }

{% endstylesheet %}

